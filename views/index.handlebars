<div class = "container">

<h1>It's Burger Time!</h1>

	<div class="col-md-12 burgerImage">
		<img class= "burgerIMG" style="width:300px" src= "/assets/img/burgerlove.png">
	</div>

	<div class="col-md-4 notEaten">
		<ul>
		  {{#each burger}}
		  	{{#unless devoured}}
		    	<li>
		      		<h4>{{this.id}} {{this.burger_name}}</h4>
		      		<form action='/update/{{this.id}}?_method=PUT' method='POST'>
						<input type='hidden' name='devoured' value='true>
						<button type='submit'> NOM NOM </button>				
					</form>
		      	</li>
		      {{/unless}}
		  {{/each}}
		</ul>
	</div>



	<div class="col-md-4 eaten">
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						<h5>{{this.id}}. {{this.burger_name}}</h5>
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>

	<div class="col-md-12">
		<form action="/" method="POST">
			<input type="hidden" name="devoured" value="false">
			<textarea type="text" name="burger"></textarea>
				<button class="submit" type="submit">I WANT THAT BURGER
		</button>
		</form>
		
	
		
	</div>

</div>